--------
FUNCTION
--------

delimiter $$

create function f_greet (
    jmeno varchar(255),
    prijmeni varchar(255),
    datum_narozeni date,
    pohlavi int
)
returns varchar(255)
deterministic sql

begin 
if (datediff(year, datum_narozeni, curdate()) < 18) then
    set @pozdrav = concat('Ahoj ', jmeno);
else
    if (pohlavi = 3) then
        set @pozdrav = concat('Dobry den pane ', jmeno, " ", prijmeni);
    else
        set @pozdrav = concat('Dobry den pani ', jmeno, " ", prijmeni);
    end if;
end if;
return @pozdrav;
end$$

